<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Carbon Groove</title>
  <meta name="viewport" content="width=device-width, initial scale=1.0">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class=<%= "#{controller.controller_name}-#{controller.action_name}" %> >

  <div class="container">


  <!--brand begin -->
     <!-- <div class="brand book2"></div> -->
    <div class="brand">
      <div class="ribbon-wrapper-green">
        <div class="ribbon-green"><%= link_to 'Sign Up!', '#signupModal', :data => {:toggle => "modal"} %></div>
        </div>

        <div class="col-3-3 brand-title">
            <div class="header"><h1><%= link_to "CarbonGroove", root_path %></h1></div>
            <div class="brand-message">What's Your Carbon Footprint?</div>
            <div class="facebook log"><%= link_to image_tag('facebook.png'), "auth/facebook", :class => "login" %></div>
            <div class="twitter log"><%= link_to image_tag('twitter.png'), "auth/twitter", :class => "login" %></div>
            <div class="button"><%= link_to 'Login', '#loginModal', :class => "btn btn-success", :data => {:toggle => "modal"} %></div>
            <!-- <div class="button"><%= link_to 'Sign Up!', '#signupModal', :class => "btn btn-success", :data => {:toggle => "modal"} %></div> -->
            <div class="foot-nav">
              <ul>
                <li><%= link_to "About", "about", :class => "about" %></li>
                <li><%= link_to "Contact", "contact", :class => "contact" %></li>
            </div>
            <br>
            <% if flash[:notice] %>
              <p class="notice" style="color: #5a8221; margin-top: 80px;"><%= flash[:notice] %></p>
            <% end %>
            <% if flash[:error] %>
              <p class="error"><%= flash[:error] %></p>
            <% end %>
      </div>
     
      <div class="brand-img"></div>

    </div>






    <%= yield %>






    <!-- Modal -->
      <div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            <h4 id="myModalLabel">Login to CarbonGroove!</h4>
        </div>
        <div class="modal-body">
          <div class="span6">
              <%= form_tag sessions_path, :class => "horizontal" do %>
                  <div class="controls">
                    <%= text_field_tag :email, params[:email], :id => "inputEmail", :placeholder => "Email" %>
                  </div>
                  <div class="controls">
                    <%= text_field_tag :password, params[:password], :id => "inputPassword", :placeholder => "Password", type: "password" %>
                  </div>
                  <%= submit_tag "Login", :class => 'btn btn-success' %>
              <% end %>
          </div>
        </div>

        <div class="modal-footer">
          <a href="#"></a>
        </div>
      </div>


    <!-- Modal -->
      <div id="signupModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <% if CONFIG['signup_enabled'] %>
          <%= render 'signup_form' %>
        <% else %>
          <%= render 'beta_form' %>
        <% end %>
      </div>

  </div>
<footer> Â© 2013 CarbonGroove</footer>


</body>
</html>
