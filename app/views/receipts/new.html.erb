<h1>Enter Purchase Information:</h1>

<%= form_for Receipt.new do |f| %>
  <%= f.select :kind, options_for_select(Receipt::KINDS) %>
  <%#= f.hidden_field :emission, :value => "0.238" %>
  <%= f.text_field :cost, :placeholder => "Cost in $" %>
  <%= hidden_field_tag 'selected', 'none' %>
  <%= f.label :purchase_date %>
  <%= f.date_select :date, start_year: 2010, end_year: 2020 %>
  <%= f.submit "Calculate Carbon Emission", :id => "submit" %>
<% end %>

<p class="list_link"><%= link_to "Back to purchase list", @receipt.user %></p>


