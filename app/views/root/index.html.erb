<!-- Modal -->
  <div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 id="myModalLabel">Login to CarbonGroove!</h4>
    </div>
    <div class="modal-body">
      <div class="span6">
          <%= form_tag sessions_path, :class => "horizontal" do %>
              <div class="controls">
                <%= text_field_tag :email, params[:email], :id => "inputEmail", :placeholder => "Email" %>
              </div>
              <div class="controls">
                <%= text_field_tag :password, params[:password], :id => "inputPassword", :placeholder => "Password", type: "password" %>
              </div>
              <%= submit_tag "Login", :class => 'btn btn-success' %>
          <% end %>
      </div>
    </div>

    <div class="modal-footer">
      <a href="#"></a>
    </div>
  </div>


<!-- Modal -->
  <div id="signupModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h4 id="myModalLabel">Sign up for CarbonGroove!</h4>
  </div>
  <div class="modal-body">
    <div class="span6">

      <%= form_for @user, :url => users_path, :class => "horizontal" do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <div class="controls">
            <%= f.text_field :email, :id => "inputEmail", :placeholder => "Email" %>
          </div>

          <div class="controls">
            <%= f.text_field :name, :id => "inputEmail", :placeholder => "Name" %>
          </div>

          <div class="controls">
            <%= f.password_field :password, :id => "inputPassword", :placeholder => "Password" %>
          </div>

          <div class="controls">
            <%= f.password_field :password_confirmation, :id => "inputPassword", :placeholder => "Password Confirmation" %>
          </div>

          <div class="controls">
            <%= f.text_field :pic_url, :id => "inputPic_URL", :placeholder => "Pic_URL" %>
          </div>

          <div class="controls">
            <%#= f.text_field :bio, :id => "inputBio", :placeholder => "About Me" %>
          </div>

          <%= f.submit "Create Account", :class => 'btn btn-success' %>
        <% end %>

    </div>
  </div>