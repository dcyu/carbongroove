<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h4 id="myModalLabel">Sign up for CarbonGroove!</h4>
</div>

<div class="modal-body">
  <div class="span6">

  <%= form_for @user, :url => users_path, :class => "horizontal" do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="controls">
      <%= f.text_field :email, :id => "inputEmail", :placeholder => "Email" %>
    </div>

    <div class="controls">
      <%= f.text_field :name, :id => "inputEmail", :placeholder => "Name" %>
    </div>

    <div class="controls">
      <%= f.password_field :password, :id => "inputPassword", :placeholder => "Password" %>
    </div>

    <div class="controls">
      <%= f.password_field :password_confirmation, :id => "inputPassword", :placeholder => "Password Confirmation" %>
    </div>

    <div class="controls">
      <%= f.text_field :pic_url, :id => "inputPic_URL", :placeholder => "Picture URL" %>
    </div>

    <%= f.submit %>
  <% end %>

  </div>
</div>
